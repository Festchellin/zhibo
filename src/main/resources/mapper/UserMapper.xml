<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhibo.org.zhibo.mapper.user.UserDao">
    <resultMap id="UserMap" type="com.zhibo.org.zhibo.entity.user.UserBean">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="account" column="account"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="qqNum" column="qq_num"/>
        <result property="wechatNum" column="wechat_num"/>
        <result property="summary" column="summary"/>
        <result property="avatar" column="summary"/>
        <result property="phone" column="phone_num"/>
    </resultMap>
    <select id="getUserById" resultMap="UserMap">
        SELECT * FROM user WHERE id = #{id}
    </select>
    <insert id="addUser" parameterType="UserBean">
        insert into user(name,password,account,code) values(#{name},#{password},#{account},#{code})
    </insert>

    <select id="getUserByAccount" resultType="UserBean">
        select * from user WHERE account=#{account}
    </select>

    <select id="getUserByCode" resultType="UserBean">
        select * from user where code=#{code}
    </select>

    <update id="updateUserState" parameterType="UserBean">
        update user set state=#{state} where id=#{id}
    </update>

</mapper>